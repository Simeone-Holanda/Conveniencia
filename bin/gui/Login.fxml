<AnchorPane prefHeight="376.0" prefWidth="613.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
   <children>
      <Label layoutX="391.0" layoutY="60.0" prefHeight="34.0" prefWidth="192.0" text="Insira sua conta" textFill="#283565">
         <font>
            <Font name="Impact" size="27.0" />
         </font>
      </Label>
      <Label layoutX="370.0" layoutY="154.0" text="Nome: ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="370.0" layoutY="192.0" text="Senha: ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="txtNome" layoutX="425.0" layoutY="150.0" promptText="NOME DO USUÁRIO">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtSenha" layoutX="425.0" layoutY="188.0" promptText="SENHA">
         <font>
            <Font name="System Bold" size="12.0" />
